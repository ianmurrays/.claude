{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(git symbolic-ref:*)",
      "mcp__sequential-thinking__sequentialthinking",
      "mcp__knowledge-graph-memory__search_nodes",
      "mcp__knowledge-graph-memory__create_entities",
      "mcp__knowledge-graph-memory__create_relations",
      "mcp__knowledge-graph-memory__add_observations",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccusage statusline",
    "padding": 0
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Claude needs your attention' -sound 'Default'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "sandbox@sandbox-ventures": true
  },
  "alwaysThinkingEnabled": true
}

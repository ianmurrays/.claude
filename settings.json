{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(git symbolic-ref:*)",
      "mcp__sequential-thinking__sequentialthinking",
      "mcp__knowledge-graph-memory__search_nodes",
      "mcp__knowledge-graph-memory__create_entities",
      "mcp__knowledge-graph-memory__create_relations",
      "mcp__knowledge-graph-memory__add_observations",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(rails test:*)",
      "mcp__plugin_sandbox_context7__resolve-library-id",
      "mcp__plugin_sandbox_context7__get-library-docs",
      "Bash(find:*)",
      "WebSearch",
      "mcp__chrome-devtools__take_snapshot",
      "mcp__chrome-devtools__take_screenshot",
      "mcp__chrome-devtools__resize_page",
      "mcp__plugin_claude-mem_mcp-search__search",
      "mcp__plugin_claude-mem_mcp-search__get_observations",
      "Bash(gh issue view:*)",
      "Bash(bin/rails test:*)",
      "mcp__chrome-devtools__list_pages",
      "mcp__chrome-devtools__navigate_page",
      "mcp__chrome-devtools__click",
      "mcp__figma__get_design_context",
      "mcp__figma__get_screenshot",
      "Bash(cat:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Waiting for your input' -sound default"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Permission needed' -sound default"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "frontend-design@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}

{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(git symbolic-ref:*)",
      "mcp__sequential-thinking__sequentialthinking",
      "mcp__knowledge-graph-memory__search_nodes",
      "mcp__knowledge-graph-memory__create_entities",
      "mcp__knowledge-graph-memory__create_relations",
      "mcp__knowledge-graph-memory__add_observations",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "prompt-improver@claude-code-marketplace": false,
    "sandbox@sandbox-ventures": true,
    "code-review@claude-code-plugins": false,
    "commit-commands@claude-code-plugins": false,
    "feature-dev@claude-code-plugins": false,
    "frontend-design@claude-code-plugins": false,
    "hookify@claude-code-plugins": false,
    "frontend-design@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "claude-mem@thedotmack": true,
    "lua-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
